<div class="card">
  <h1 class="card-header">User Detail</h1>
  <div class="card-body">
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.name  %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Type</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.role == "0" ? 'Admin' : 'User'  %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.email  %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Phone</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.phone  %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">date_of_birth</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.dob.strftime('%Y/%m/%d')  %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Address</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.address  %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Created Date</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.created_at.strftime('%Y/%m/%d') %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Created User</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.created_user.name %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Updated date</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.updated_at.strftime('%Y/%m/%d') %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Updated User</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.updated_user.name %></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Profile</label>
    <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= image_tag @user.profile, style: 'height:150px;width:auto;' %></label>
    </div>
</div>
<div class="form-group row">
    <%= link_to 'Back', users_path , class:"btn btn-dark" %>
</div>
  </div>
</div>