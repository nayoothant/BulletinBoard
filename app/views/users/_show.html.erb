<div class="modal-header">
<h5 class="modal-title">User Detail</h5>
<button type="button" class="close" data-dismiss="modal" aria-label="Close">
  <span aria-hidden="true">&times;</span>
</button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-4">
                <div class="form-group">
                    <div class="img text-center "><%= image_tag @user.profile, style: 'height:120px;width:auto;' %> </div>
                </div>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.name  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Type</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.role == "0" ? 'Admin' : 'User'  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.email  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Phone</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.phone  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">date_of_birth</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.dob  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.address  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Created Date</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.created_at.strftime('%Y/%m/%d') %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Created User</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.created_user.name %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Updated date</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.updated_at.strftime('%Y/%m/%d') %></label>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-4 col-form-label">Updated User</label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.updated_user.name %></label>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
