<div class="card">
  <h1 class="card-header">Profile</h1>
  <div class="card-body">
<div class="row p-3">
    <div class="col-4">
        <div class="form-group">
            <div class="img text-center "><%= image_tag @user.profile, style: 'height:120px;width:auto;' %> </div>
        </div>
    </div>
    <div class="col-8">
        <div class="col-8">
        <div class="form-group row mb-3">
            <div class="col-sm-4"> Name </div>
            <div class="col-sm-8"><%= @user.name %></div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-4"> Type </div>
            <div class="col-sm-8"><%= User.types.keys[@user.role.to_i] %></div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-4"> Email </div>
            <div class="col-sm-8"><%= @user.email %></div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-4"> Phone </div>
            <div class="col-sm-8"><%= @user.phone %></div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-4"> Date of Birth </div>
            <div class="col-sm-8"><%= @user.dob %></div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-4"> Address </div>
            <div class="col-sm-8"><%= @user.address %></div>
        </div>
        <a class="btn btn-dark" href="<%= edit_profile_user_path(@user) %>">Edit Profile</a>
    </div>
</div>
  </div>
</div>