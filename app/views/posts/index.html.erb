<h1>Post List</h1>
<br>
  <%= form_tag({ :action => :search_post }, { :method => :get }) do %>
      <div class="field form-group row float-right">
          <label class="col-form-label mr-2">Keyword:</label>
          <%= text_field_tag :keyword, params[:keyword], class: "form-control col-sm-3 mr-2" %>
          <%= submit_tag ("Search"), class: 'btn btn-secondary mr-2' %>
          <%= link_to "Create", new_post_path,  class: 'btn btn-primary mr-2' %>
          <%= link_to "Upload", posts_path, class: 'btn btn-primary mr-2' %>
          <%= link_to "Download", posts_path, class: 'btn btn-primary' %>
      </div>
  <% end %>
<div class="table_container">
  <table id="list" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead class="thead-dark">
      <tr>
        <th>Post Title</th>
        <th>Post Description</th>
        <th>Posted User</th>
        <th>Posted Date</th>
        <th>Operation</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= post.created_user.name %></td>
          <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= link_to "Edit",edit_post_path(post), class: 'btn btn-primary mr-2'  %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<script>
$(document).ready(function () {
      var dataTable = null

    document.addEventListener("turbolinks:before-cache", function() {
      if (dataTable !== null) {
      dataTable.destroy()
      dataTable = null
      }
    })
  dataTable = $('#list').DataTable({
    "searching": false,
    "ordering": false,
    "bLengthChange": false,
    "info": false,
    "pageLength": 5,
  }).draw();
  $('.dataTables_length').addClass('bs-select');
});
</script>